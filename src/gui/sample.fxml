<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controller">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem fx:id="fileNewEmployee" mnemonicParsing="false" onAction="#makeNewEmployee" text="New Employee" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="Documentation" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <TabPane tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab text="Generate Schedule">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="342.0" prefWidth="640.0">
                     <children>
                        <Button fx:id="genSchedExpoButton" layoutX="447.0" layoutY="293.0" mnemonicParsing="false" onAction="#generate" prefHeight="35.0" prefWidth="179.0" text="Generate Schedule and Export" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
          <Tab text="Manage Employee">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TextField fx:id="manageEmployeeNameText" layoutX="14.0" layoutY="68.0" />
                        <Text fx:id="manageEmployeeIDField" layoutX="14.0" layoutY="64.0" strokeType="OUTSIDE" strokeWidth="0.0" text="ID: -1" />
                        <ComboBox fx:id="manageSelectEmployee" layoutX="14.0" layoutY="14.0" onAction="#checkID" prefWidth="150.0" promptText="SELECT EMPLOYEE" />
                        <ComboBox fx:id="manageActivityField" layoutX="14.0" layoutY="135.0" onAction="#showDateRange" prefWidth="150.0" promptText="is employee active" />
                        <TextField fx:id="manageDateRange1" layoutX="164.0" layoutY="135.0" />
                        <Text fx:id="manageDateRange2" layoutX="331.0" layoutY="152.0" strokeType="OUTSIDE" strokeWidth="0.0" text="through" />
                        <TextField fx:id="manageDateRange3" layoutX="402.0" layoutY="135.0" />
                        <Button fx:id="manageSaveButton" layoutX="479.0" layoutY="303.0" mnemonicParsing="false" onAction="#saveEmployee" text="Save Selected Employee" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
  </children>
</VBox>
